{
  // ============================================================================
  // VS Code User Settings (Shane)
  // Philosophy:
  // - Minimize visual noise
  // - Optimize parsing & reading speed (aging eyes)
  // - Separate structure from decoration
  // - Let OS control light/dark polarity
  // ============================================================================

  // --------------------------------------------------------------------------
  // Global UI / Theme behavior (science-based)
  // --------------------------------------------------------------------------
  "window.zoomLevel": 1,
  "window.autoDetectColorScheme": false,

  // Preferred themes (positive polarity by day, low-halation by night)
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "GitHub Dark Default",
  "workbench.list.fontSize": 22,
  "workbench.list.lineHeight": 28,
  "workbench.tree.fontSize": 22,
  "workbench.list.fontFamily": "Blex Mono Nerd Font, monospace",
  // --------------------------------------------------------------------------
  // Typography (eye strain reduction)
  // --------------------------------------------------------------------------
  //"editor.fontFamily": "Blex Mono Nerd Font, monospace",
  //"editor.fontFamily": "Blex Mono Nerd Font Bold",
  "editor.fontFamily": "BlexMono Nerd Font Mono",
  "editor.fontSize": 22,
  "editor.lineHeight": 32,
  "editor.letterSpacing": 0.4,
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",
  // --------------------------------------------------------------------------
  // Core readability: reduce visual noise
  // --------------------------------------------------------------------------
  "editor.showUnused": false,
  //"editor.renderValidationDecorations": "off",
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",

  // Highlight suppression (schema-valid)
  "editor.selectionHighlight": true,
  "editor.wordHighlight": false,
  "editor.wordHighlightStrong": false,
  "editor.occurrencesHighlight":"singleFile",
  "editor.matchBrackets": "near",
  "errorLens.enabled": false,
  "errorLens.messageEnabled": false,
  "errorLens.statusBarMessageEnabled": false,
  "errorLens.gutterIconsEnabled": false,
  "editor.renderValidationDecorations": "on",
  // --------------------------------------------------------------------------
  // Structure & spatial orientation
  // --------------------------------------------------------------------------
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  "editor.renderLineHighlight": "line",
  "editor.cursorSurroundingLines": 6,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  // --------------------------------------------------------------------------
  // Horizontal scanning reduction
  // --------------------------------------------------------------------------
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "breadcrumbs.enabled": true,
  // --------------------------------------------------------------------------
  // Explorer / minimap / chrome cleanup
  // --------------------------------------------------------------------------
  "editor.minimap.enabled": false,
  "editor.codeLens": false,

  "workbench.tree.indent": 25,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.revealIfOpen": true,

  // --------------------------------------------------------------------------
  // Terminal readability
  // --------------------------------------------------------------------------
  "terminal.integrated.fontFamily": "Blex Mono Nerd Font, monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.enablePersistentSessions": false,

  // --------------------------------------------------------------------------
  // Rulers (soft guides only)
  // --------------------------------------------------------------------------
  "editor.rulers": [{ "column": 100, "color": "#FFFFFF14" }],

  // --------------------------------------------------------------------------
  // Color tuning (low contrast, no glow)
  // --------------------------------------------------------------------------
  // "workbench.colorCustomizations": {

  //     "editorIndentGuide.activeBackground1": "#ffc400",
  // "editorIndentGuide.activeBackground2": "#ff0000",
  // "editorIndentGuide.activeBackground3": "#a51283",
  // "editorIndentGuide.activeBackground4": "#ff8c00",
  // "editorIndentGuide.activeBackground5": "#ffc400",
  // "editorIndentGuide.activeBackground6": "#ffc400",

  //        // non-active indent guide colors
  // "editorIndentGuide.background1": "#0066ff",
  // "editorIndentGuide.background2": "#00e5ff",
  // "editorIndentGuide.background3": "#00e5ff",
  // "editorIndentGuide.background4": "#00e5ff",
  // "editorIndentGuide.background5": "#00e5ff",
  // "editorIndentGuide.background6": "#00e5ff",
  // "editor.background": "#111214"

  //   "editorIndentGuide.activeBackground1": "#e6b800",
  // "editorIndentGuide.activeBackground2": "#cc0000",
  // "editorIndentGuide.activeBackground3": "#8a0f6b",
  // "editorIndentGuide.activeBackground4": "#cc7000",

  // "editorIndentGuide.background1": "#0055cc",
  // "editorIndentGuide.background2": "#00c8cc",
  // "editorIndentGuide.background3": "#00c8cc"
  // },
  "workbench.colorCustomizations": {
    "[GitHub Dark Default]": {
      "editor.background": "#111214",

      "editorIndentGuide.background1": "#AECBFA33",
      "editorIndentGuide.background2": "#C5E1A533",
      "editorIndentGuide.background3": "#FFCC8033",
      "editorIndentGuide.background4": "#F8BBD033",
      "editorIndentGuide.background5": "#D1C4E933",
      "editorIndentGuide.background6": "#80DEEA33",

      "editorIndentGuide.activeBackground1": "#AECBFA88",
      "editorIndentGuide.activeBackground2": "#C5E1A588",
      "editorIndentGuide.activeBackground3": "#FFCC8088",
      "editorIndentGuide.activeBackground4": "#F8BBD088",
      "editorIndentGuide.activeBackground5": "#D1C4E988",
      "editorIndentGuide.activeBackground6": "#80DEEA88"
    },

    "[GitHub Light Default]": {
      // Donâ€™t override editor.background here; let the light theme be light.

      // Light theme needs darker guides (same hues, but with black-ish alpha)
      "editorIndentGuide.background1": "#1A73E833",
      "editorIndentGuide.background2": "#34A85333",
      "editorIndentGuide.background3": "#FBBC0533",
      "editorIndentGuide.background4": "#EA433533",
      "editorIndentGuide.background5": "#7E57C233",
      "editorIndentGuide.background6": "#00ACC133",

      "editorIndentGuide.activeBackground1": "#1A73E888",
      "editorIndentGuide.activeBackground2": "#34A85388",
      "editorIndentGuide.activeBackground3": "#FBBC0588",
      "editorIndentGuide.activeBackground4": "#EA433588",
      "editorIndentGuide.activeBackground5": "#7E57C288",
      "editorIndentGuide.activeBackground6": "#00ACC188"
    }
  },
  // --------------------------------------------------------------------------
  // Markdown / formatting noise
  // --------------------------------------------------------------------------
  "markdown.validate.enabled": false,
  "markdownlint.enable": false,
  "editorConfig.enable": false,

  "[markdown]": {
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false
  },

  "markdownlint.config": {
    "MD009": false,
    "MD041": false
  },

  // --------------------------------------------------------------------------
  // Language basics
  // --------------------------------------------------------------------------
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.13",

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // Separators extension (method-only, top-level)
  // --------------------------------------------------------------------------
  "separators.enabledSymbols": ["Methods"],
  "separators.enabledFoldingRanges": [],
  "separators.maxDepth": 0,
  "separators.minimumLineCount": 8,
  "separators.location": "aboveTheSymbol",
  "separators.methods.borderWidth": 1,
  "separators.methods.borderStyle": "solid",

  // --------------------------------------------------------------------------
  // Git / blame suppression
  // --------------------------------------------------------------------------
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // --------------------------------------------------------------------------
  // Java (SDKMAN is source of truth)
  // --------------------------------------------------------------------------
  "java.configuration.detectJdksAtStart": true,
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.jdt.ls.java.home": "/Users/shane/.sdkman/candidates/java/current",
  "java.import.gradle.java.home": "/Users/shane/.sdkman/candidates/java/current",

  "java.compile.nullAnalysis.mode": "automatic",
  "java.maxConcurrentBuilds": 12,
  "java.sources.organizeImports.staticStarThreshold": 1,

  "java.debug.settings.hotCodeReplace": "never",
  "java.debug.settings.showToString": false,
  "java.debug.settings.showLogicalStructure": false,
  "java.debug.settings.maxStringLength": 300,
  "java.debug.settings.stepping.skipSynthetics": true,
  "java.debug.settings.stepping.skipStaticInitializers": true,
  "java.debug.settings.stepping.skipConstructors": true,
  "debug.inlineValues": "off",
  "debug.autoExpandLazyVariables": "off",
  "java.debug.settings.stepping.skipClasses": [
    "$JDK",
    "$Libraries",
    "java.*",
    "javax.*",
    "org.springframework.*",
    "org.apache.*",
    "org.slf4j.*",
    "ch.qos.logback.*",
    "reactor.core.*",
    "kotlin.*"
  ],

  // --------------------------------------------------------------------------
  // Terminal / Maven / PlantUML follow SDKMAN
  // --------------------------------------------------------------------------
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "env": {
        "JAVA_HOME": "/Users/shane/.sdkman/candidates/java/current"
      }
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh",

  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "/Users/shane/.sdkman/candidates/java/current"
    }
  ],

  "plantuml.java": "/Users/shane/.sdkman/candidates/java/current/bin/java",

  // --------------------------------------------------------------------------
  // Disable competing language servers
  // --------------------------------------------------------------------------
  "netbeans.javaSupport.enabled": false,
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": false,
  "jdk.telemetry.enabled": false,
  "geminicodeassist.displayInlineContextHint": false,
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.fontAliasing": "antialiased",
  "editor.mouseWheelZoom": true,
    "java.jdt.ls.vmargs": "-XX:+UseZGC -Xms2g -Xmx8g",
  "files.watcherExclude": {
    "**/target/**": true,
    "**/.m2/**": true
  },
  "search.followSymlinks": false,
  "python.analysis.memory.keepLibraryAst": false,
  "docker.extension.enableComposeLanguageServer": false,
    // --------------------------------------------------------------------------
  // Git Change Tracking (inline diff indicators in gutter)
  // --------------------------------------------------------------------------
  "scm.diffDecorations": "all",
  "scm.diffDecorationsGutterWidth": 4,
  "scm.diffDecorationsGutterVisibility": "always",
  "scm.defaultViewMode": "tree",
  "scm.alwaysShowActions": true,

  // --------------------------------------------------------------------------
  // Git Explorer Decorations (file status badges & colors)
  // --------------------------------------------------------------------------
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,

  // --------------------------------------------------------------------------
  // Git Auto-sync (stay current with remote)
  // --------------------------------------------------------------------------
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmSync": false,

  // --------------------------------------------------------------------------
  // Local History & Timeline (track every change for easy comparison)
  // --------------------------------------------------------------------------
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileSize": 2048,
  "workbench.localHistory.maxFileEntries": 100,
  "workbench.localHistory.mergeWindow": 10,
  "timeline.pageSize": 50,
  "timeline.excludeSources": [],

  // --------------------------------------------------------------------------
  // Auto-save (enables more frequent local history snapshots)
  // --------------------------------------------------------------------------
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,

  // --------------------------------------------------------------------------
  // Diff Editor (optimized for readability & navigation)
  // --------------------------------------------------------------------------
  "diffEditor.renderSideBySide": true,              // Side-by-side easier with large fonts
  "diffEditor.hideUnchangedRegions.enabled": true, // Collapse unchanged (easier scanning)
  "diffEditor.hideUnchangedRegions.minimumLineCount": 3,
  "diffEditor.hideUnchangedRegions.contextLineCount": 3,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderIndicators": true,             // Show +/- indicators
  "diffEditor.codeLens": true,                     // Show accept/ignore actions
  "diffEditor.diffAlgorithm": "advanced",          // Better word-level diffs
  "diffEditor.wordWrap": "on",                     // Match editor word wrap
  "diffEditor.maxComputationTime": 15000,

  // --------------------------------------------------------------------------
  // Editor Navigation Enhancements
  // --------------------------------------------------------------------------
  "workbench.editor.enablePreview": false,         // Always open files (no preview)
  "workbench.editor.highlightModifiedTabs": true,  // Highlight unsaved files
  "workbench.editor.decorations.badges": true,     // Show git status on tabs
  "workbench.editor.closeOnFileDelete": true,      // Close deleted files

  // --------------------------------------------------------------------------
  // Breadcrumbs Enhancement
  // --------------------------------------------------------------------------
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.symbolSortOrder": "position",

  // --------------------------------------------------------------------------
  // Sticky Scroll Optimization
  // --------------------------------------------------------------------------
  "editor.stickyScroll.maxLineCount": 5,
  "editor.stickyScroll.defaultModel": "outlineModel",
}
