{
  // ============================================================================
  // VS Code User Settings (Shane)
  // Philosophy:
  // - Minimize visual noise
  // - Optimize parsing & reading speed (aging eyes)
  // - Separate structure from decoration
  // - Let OS control light/dark polarity
  // ============================================================================

  // --------------------------------------------------------------------------
  // Global UI / Theme behavior (science-based)
  // --------------------------------------------------------------------------
  "window.zoomLevel": 1,
  "window.autoDetectColorScheme": true,

  // Preferred themes (positive polarity by day, low-halation by night)
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "GitHub Dark Default",

  // --------------------------------------------------------------------------
  // Typography (eye strain reduction)
  // --------------------------------------------------------------------------
  "editor.fontFamily": "Blex Mono Nerd Font, monospace",
  "editor.fontSize": 19,
  "editor.lineHeight": 32,
  "editor.letterSpacing": 0.4,
  "editor.fontLigatures": true,

  // --------------------------------------------------------------------------
  // Core readability: reduce visual noise
  // --------------------------------------------------------------------------
  "editor.showUnused": false,
  //"editor.renderValidationDecorations": "off",
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",

  // Highlight suppression (schema-valid)
  "editor.selectionHighlight": false,
  "editor.wordHighlight": false,
  "editor.wordHighlightStrong": false,
  "editor.occurrencesHighlight": "off",
  "editor.matchBrackets": "near",
  "errorLens.enabled": false,
  "errorLens.messageEnabled": false,
  "errorLens.statusBarMessageEnabled": false,
  "errorLens.gutterIconsEnabled": false,
  "editor.renderValidationDecorations": "on",

  // --------------------------------------------------------------------------
  // Structure & spatial orientation
  // --------------------------------------------------------------------------
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  "editor.renderLineHighlight": "line",
  "editor.cursorSurroundingLines": 6,
  "editor.stickyScroll.enabled": true,
  "editor.smoothScrolling": true,
  // --------------------------------------------------------------------------
  // Horizontal scanning reduction
  // --------------------------------------------------------------------------
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "breadcrumbs.enabled": true,
  // --------------------------------------------------------------------------
  // Explorer / minimap / chrome cleanup
  // --------------------------------------------------------------------------
  "editor.minimap.enabled": false,
  "editor.codeLens": false,

  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.revealIfOpen": true,

  // --------------------------------------------------------------------------
  // Terminal readability
  // --------------------------------------------------------------------------
  "terminal.integrated.fontFamily": "Blex Mono Nerd Font, monospace",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.enablePersistentSessions": false,

  // --------------------------------------------------------------------------
  // Rulers (soft guides only)
  // --------------------------------------------------------------------------
  "editor.rulers": [
    { "column": 100, "color": "#FFFFFF14" }
  ],

  // --------------------------------------------------------------------------
  // Color tuning (low contrast, no glow)
  // --------------------------------------------------------------------------
  // "workbench.colorCustomizations": {


    
    //     "editorIndentGuide.activeBackground1": "#ffc400",
    // "editorIndentGuide.activeBackground2": "#ff0000",
    // "editorIndentGuide.activeBackground3": "#a51283",
    // "editorIndentGuide.activeBackground4": "#ff8c00",
    // "editorIndentGuide.activeBackground5": "#ffc400",
    // "editorIndentGuide.activeBackground6": "#ffc400",

    //        // non-active indent guide colors
    // "editorIndentGuide.background1": "#0066ff",
    // "editorIndentGuide.background2": "#00e5ff",
    // "editorIndentGuide.background3": "#00e5ff",
    // "editorIndentGuide.background4": "#00e5ff",
    // "editorIndentGuide.background5": "#00e5ff",
    // "editorIndentGuide.background6": "#00e5ff",
    // "editor.background": "#111214"


//   "editorIndentGuide.activeBackground1": "#e6b800",
// "editorIndentGuide.activeBackground2": "#cc0000",
// "editorIndentGuide.activeBackground3": "#8a0f6b",
// "editorIndentGuide.activeBackground4": "#cc7000",

// "editorIndentGuide.background1": "#0055cc",
// "editorIndentGuide.background2": "#00c8cc",
// "editorIndentGuide.background3": "#00c8cc"
 // },
"workbench.colorCustomizations": {
  // Keep your background if you like it
  "editor.background": "#111214",

  // Inactive guides: pastel hues + low alpha (subtle)
  "editorIndentGuide.background1": "#AECBFA33", // pastel blue
  "editorIndentGuide.background2": "#C5E1A533", // pastel green
  "editorIndentGuide.background3": "#FFCC8033", // pastel orange
  "editorIndentGuide.background4": "#F8BBD033", // pastel pink
  "editorIndentGuide.background5": "#D1C4E933", // pastel lavender
  "editorIndentGuide.background6": "#80DEEA33", // pastel cyan

  // Active guide: same hues, higher alpha (obvious “where am I”)
  "editorIndentGuide.activeBackground1": "#AECBFA88",
  "editorIndentGuide.activeBackground2": "#C5E1A588",
  "editorIndentGuide.activeBackground3": "#FFCC8088",
  "editorIndentGuide.activeBackground4": "#F8BBD088",
  "editorIndentGuide.activeBackground5": "#D1C4E988",
  "editorIndentGuide.activeBackground6": "#80DEEA88"
},
  // --------------------------------------------------------------------------
  // Markdown / formatting noise
  // --------------------------------------------------------------------------
  "markdown.validate.enabled": false,
  "markdownlint.enable": false,
  "editorConfig.enable": false,

  "[markdown]": {
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false
  },

  "markdownlint.config": {
    "MD009": false,
    "MD041": false
  },

  // --------------------------------------------------------------------------
  // Language basics
  // --------------------------------------------------------------------------
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.13",

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------------------------------------------------------------
  // Separators extension (method-only, top-level)
  // --------------------------------------------------------------------------
  "separators.enabledSymbols": ["Methods"],
  "separators.enabledFoldingRanges": [],
  "separators.maxDepth": 0,
  "separators.minimumLineCount": 8,
  "separators.location": "aboveTheSymbol",
  "separators.methods.borderWidth": 1,
  "separators.methods.borderStyle": "solid",

  // --------------------------------------------------------------------------
  // Git / blame suppression
  // --------------------------------------------------------------------------
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // --------------------------------------------------------------------------
  // Java (SDKMAN is source of truth)
  // --------------------------------------------------------------------------
  "java.configuration.detectJdksAtStart": true,
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.jdt.ls.java.home": "/Users/shane/.sdkman/candidates/java/current",
  "java.import.gradle.java.home": "/Users/shane/.sdkman/candidates/java/current",

  "java.compile.nullAnalysis.mode": "automatic",
  "java.maxConcurrentBuilds": 12,
  "java.sources.organizeImports.staticStarThreshold": 1,

  "java.debug.settings.hotCodeReplace": "never",
  "java.debug.settings.showToString": false,
  "java.debug.settings.showLogicalStructure": false,
  "java.debug.settings.maxStringLength": 2000,
  "java.debug.settings.stepping.skipSynthetics": true,
  "java.debug.settings.stepping.skipStaticInitializers": true,
  "java.debug.settings.stepping.skipConstructors": true,
  "debug.inlineValues": "off",
  "debug.autoExpandLazyVariables": "off",
  "java.debug.settings.stepping.skipClasses": [
    "$JDK",
    "$Libraries",
    "java.*",
    "javax.*",
    "org.springframework.*",
    "org.apache.*",
    "org.slf4j.*",
    "ch.qos.logback.*",
    "reactor.core.*",
    "kotlin.*"
  ],

  // --------------------------------------------------------------------------
  // Terminal / Maven / PlantUML follow SDKMAN
  // --------------------------------------------------------------------------
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "zsh",
      "env": {
        "JAVA_HOME": "/Users/shane/.sdkman/candidates/java/current"
      }
    }
  },
  "terminal.integrated.defaultProfile.osx": "zsh",

  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "/Users/shane/.sdkman/candidates/java/current"
    }
  ],

  "plantuml.java": "/Users/shane/.sdkman/candidates/java/current/bin/java",

  // --------------------------------------------------------------------------
  // Disable competing language servers
  // --------------------------------------------------------------------------
  "netbeans.javaSupport.enabled": false,
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": false,
  "jdk.telemetry.enabled": false,
  "geminicodeassist.displayInlineContextHint": false
}
