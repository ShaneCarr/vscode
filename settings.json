{
  // ============================================================================
  // VS Code User Settings (Shane)
  // Philosophy:
  // - Minimize visual noise
  // - Optimize parsing & reading speed (aging eyes)
  // - Separate structure from decoration
  // - Let OS control light/dark polarity
  // ============================================================================

  // --------------------------------------------------------------------------
  // Global UI / Theme behavior (science-based)
  // --------------------------------------------------------------------------
  "window.zoomLevel": 0,
  "window.autoDetectColorScheme": false,

  // Preferred themes (positive polarity by day, low-halation by night)
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.preferredDarkColorTheme": "GitHub Dark Dimmed",
  "workbench.colorTheme": "Solarized Light",
  "workbench.fontAliasing": "antialiased",

  // 3-Theme System (48+ optimized, easy toggle):
  // Warm:  Solarized Light    - Cream tones, long sessions (Alt+1)
  // Cool:  GitHub Light       - Blue tones, debugging    (Alt+2)
  // Dim:   GitHub Dark Dimmed - Soft dark, evening      (Alt+3)
  // Cycle: Alt+T to rotate through all three

  // --------------------------------------------------------------------------
  // Typography System (optimized for 48+ age group, reading comprehension)
  // Strategy: Consistent 20px base with generous line heights (1.6-1.8x)
  // --------------------------------------------------------------------------

  // Main editor: Primary focus area
  "editor.fontFamily": "BlexMono Nerd Font Mono",
  "editor.fontSize": 20,
  "editor.lineHeight": 34,          // 1.7x for excellent readability
  "editor.letterSpacing": 0.5,      // Slightly increased for clarity
  "editor.fontLigatures": true,
  "editor.fontWeight": "500",       // Medium weight for good contrast
  "editor.mouseWheelZoom": true,
  "editor.cursorWidth": 2,          // Slightly thicker cursor
  "editor.cursorStyle": "line",     // Classic line cursor

  // Workbench lists (file explorer, search results, etc.)
  "workbench.list.fontSize": 19,
  "workbench.list.lineHeight": 32,  // 1.68x for comfortable scanning
  "workbench.tree.fontSize": 19,
  "workbench.list.fontFamily": "Blex Mono Nerd Font, monospace",
  "workbench.list.smoothScrolling": true,

  // --------------------------------------------------------------------------
  // Core readability: reduce visual noise, enhance structure
  // --------------------------------------------------------------------------
  "editor.showUnused": false,
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.enabled": false,
  "editor.inlayHints.enabled": "off",

  // Whitespace rendering (helps see code structure without clutter)
  "editor.renderWhitespace": "boundary",    // Show at word boundaries only

  // Editor padding (breathing room reduces eye strain)
  "editor.padding.top": 16,
  "editor.padding.bottom": 16,

  // Highlight suppression (schema-valid)
  "editor.selectionHighlight": true,
  "editor.wordHighlight": false,
  "editor.wordHighlightStrong": false,
  "editor.occurrencesHighlight": "singleFile",
  "editor.matchBrackets": "near",
  "editor.renderValidationDecorations": "on",

  // ErrorLens: minimal configuration (status bar only)
  "errorLens.enabled": true,
  "errorLens.messageEnabled": false,
  "errorLens.statusBarMessageEnabled": true,
  "errorLens.statusBarColorsEnabled": true,
  "errorLens.statusBarMessageType": "closestSeverity",
  "errorLens.gutterIconsEnabled": false,
  "errorLens.followCursor": "closestProblem",
  "errorLens.scrollbarHackEnabled": true,
  "errorLens.fontStyleItalic": true,
  "errorLens.messageBackgroundMode": "message",

  // --------------------------------------------------------------------------
  // Structure & spatial orientation
  // --------------------------------------------------------------------------
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": "active",

  // Bracket pair colorization (enhanced readability)
  "editor.bracketPairColorization.enabled": true,

  "editor.renderLineHighlight": "line",
  "editor.cursorSurroundingLines": 6,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",

  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.stickyScroll.defaultModel": "outlineModel",

  "editor.smoothScrolling": true,

  // Semantic highlighting for better code understanding
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // --------------------------------------------------------------------------
  // Horizontal scanning reduction
  // --------------------------------------------------------------------------
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "breadcrumbs.enabled": true,
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.symbolSortOrder": "position",
  "breadcrumbs.fontSize": 16,               // Visible but not intrusive

  // --------------------------------------------------------------------------
  // Explorer / minimap / chrome cleanup
  // --------------------------------------------------------------------------
  "editor.minimap.enabled": false,
  "editor.codeLens": false,

  "workbench.tree.indent": 25,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.activityBar.location": "default",

  // Explorer enhancements
  "explorer.sortOrder": "type",
  "explorer.compactFolders": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.test.ts",
    "*.tsx": "${capture}.test.tsx",
    "*.java": "${capture}.class",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "pom.xml": "mvnw, mvnw.cmd, .mvn"
  },

  // --------------------------------------------------------------------------
  // Terminal, Debug Console, Output (critical for reading command output)
  // --------------------------------------------------------------------------
  "terminal.integrated.fontFamily": "Blex Mono Nerd Font, monospace",
  "terminal.integrated.fontSize": 18,       // Up from 15 - much more readable!
  "terminal.integrated.lineHeight": 1.5,    // Up from 1.2 - better spacing
  "terminal.integrated.letterSpacing": 0.5,
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.tabs.hideCondition": "never",
  "terminal.integrated.enablePersistentSessions": false,

  // Debug console (same as terminal for consistency)
  "debug.console.fontSize": 18,
  "debug.console.lineHeight": 27,           // 1.5x
  "debug.console.fontFamily": "Blex Mono Nerd Font, monospace",

  // Linux terminal profiles (SDKMAN integration)
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "env": {
        "JAVA_HOME": "/home/shane/.sdkman/candidates/java/current"
      }
    },
    "zsh": {
      "path": "zsh",
      "env": {
        "JAVA_HOME": "/home/shane/.sdkman/candidates/java/current"
      }
    }
  },
  "terminal.integrated.defaultProfile.linux": "bash",

  // --------------------------------------------------------------------------
  // Rulers (soft guides only)
  // --------------------------------------------------------------------------
  "editor.rulers": [{ "column": 100, "color": "#FFFFFF14" }],

  // --------------------------------------------------------------------------
  // Color tuning (enhanced for readability, Age 48+ optimization)
  // --------------------------------------------------------------------------
  "workbench.colorCustomizations": {
    "editorInfo.foreground": "#0080ff6a",
    // Enhanced cursor visibility (blue, easy to spot)
    "editorCursor.foreground": "#0066cc",
    // Subtle but visible line highlight
    "editor.lineHighlightBackground": "#e8f4fd22",
    "editor.lineHighlightBorder": "#e8f4fd00"
  },

  // --------------------------------------------------------------------------
  // IntelliSense & Code Suggestions (optimized for quality)
  // --------------------------------------------------------------------------
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "first",

  // --------------------------------------------------------------------------
  // Code Actions & Formatting
  // --------------------------------------------------------------------------
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll": "never"
  },

  // --------------------------------------------------------------------------
  // Markdown / formatting noise
  // --------------------------------------------------------------------------
  "markdown.validate.enabled": false,
  "markdownlint.enable": false,
  "editorConfig.enable": false,

  "[markdown]": {
    "files.insertFinalNewline": false,
    "files.trimFinalNewlines": false,
    "editor.formatOnSave": false,
    "editor.fontSize": 20,
    "editor.lineHeight": 34
  },

  "markdownlint.config": {
    "MD009": false,
    "MD041": false
  },

  // Markdown preview (reading documentation)
  "markdown.preview.fontSize": 18,
  "markdown.preview.lineHeight": 1.7,

  // --------------------------------------------------------------------------
  // Hover & Suggestion Widgets (tooltips, autocomplete)
  // --------------------------------------------------------------------------
  "editor.hover.enabled": "on",
  "editor.hover.delay": 500,
  "editor.hover.sticky": true,

  // Suggest widget (autocomplete popup)
  "editor.suggestFontSize": 18,             // Readable suggestions
  "editor.suggestLineHeight": 28,           // Comfortable line height
  "editor.codeLensFontSize": 16,            // Slightly smaller for code lens

  // Find widget (search box)
  "editor.find.fontSize": 17,

  // --------------------------------------------------------------------------
  // Accessibility Enhancements (Age 48+ optimization)
  // --------------------------------------------------------------------------
  // Render control characters for better debugging
  "editor.renderControlCharacters": true,

  // Status bar visibility
  "workbench.statusBar.visible": true,

  // --------------------------------------------------------------------------
  // Language-specific settings
  // --------------------------------------------------------------------------

  // Python
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.13",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.memory.keepLibraryAst": false,

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // JSON/JSONC
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // TypeScript/JavaScript (selective inlay hints)
  "[typescript]": {
    "editor.inlayHints.enabled": "on"
  },

  "[javascript]": {
    "editor.inlayHints.enabled": "on"
  },

  "typescript.inlayHints.parameterNames.enabled": "literals",
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  // --------------------------------------------------------------------------
  // Separators extension (method-only, top-level)
  // --------------------------------------------------------------------------
  "separators.enabledSymbols": ["Methods"],
  "separators.enabledFoldingRanges": [],
  "separators.maxDepth": 0,
  "separators.minimumLineCount": 8,
  "separators.location": "aboveTheSymbol",
  "separators.methods.borderWidth": 1,
  "separators.methods.borderStyle": "solid",

  // --------------------------------------------------------------------------
  // Git Change Tracking (inline diff indicators in gutter)
  // --------------------------------------------------------------------------
  "scm.diffDecorations": "all",
  "scm.diffDecorationsGutterWidth": 4,
  "scm.diffDecorationsGutterVisibility": "always",
  "scm.defaultViewMode": "tree",
  "scm.alwaysShowActions": true,

  // --------------------------------------------------------------------------
  // Git Explorer Decorations (file status badges & colors)
  // --------------------------------------------------------------------------
  "explorer.decorations.badges": true,
  "explorer.decorations.colors": true,

  // --------------------------------------------------------------------------
  // Git Auto-sync (stay current with remote)
  // --------------------------------------------------------------------------
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.confirmSync": false,

  // --------------------------------------------------------------------------
  // Git Merge Editor (NEW - powerful 3-way merge interface)
  // --------------------------------------------------------------------------
  "git.mergeEditor": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,

  // --------------------------------------------------------------------------
  // GitLens (minimal, blame suppression)
  // --------------------------------------------------------------------------
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": false,

  // --------------------------------------------------------------------------
  // Local History & Timeline (track every change for easy comparison)
  // --------------------------------------------------------------------------
  "workbench.localHistory.enabled": true,
  "workbench.localHistory.maxFileSize": 2048,
  "workbench.localHistory.maxFileEntries": 100,
  "workbench.localHistory.mergeWindow": 10,
  "timeline.pageSize": 50,
  "timeline.excludeSources": [],

  // --------------------------------------------------------------------------
  // Auto-save (enables more frequent local history snapshots)
  // --------------------------------------------------------------------------
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,

  // --------------------------------------------------------------------------
  // Diff Editor (optimized for readability & navigation)
  // --------------------------------------------------------------------------
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.hideUnchangedRegions.minimumLineCount": 3,
  "diffEditor.hideUnchangedRegions.contextLineCount": 3,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderIndicators": true,
  "diffEditor.codeLens": true,
  "diffEditor.diffAlgorithm": "advanced",
  "diffEditor.wordWrap": "on",
  "diffEditor.maxComputationTime": 15000,

  // --------------------------------------------------------------------------
  // Editor Navigation Enhancements
  // --------------------------------------------------------------------------
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.closeOnFileDelete": true,

  // --------------------------------------------------------------------------
  // Performance: File Exclusions
  // --------------------------------------------------------------------------
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/target": true
  },

  "files.watcherExclude": {
    "**/target/**": true,
    "**/.m2/**": true,
    "**/node_modules/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/.m2": true,
    "**/dist": true,
    "**/.vscode": false
  },

  "search.followSymlinks": false,

  // --------------------------------------------------------------------------
  // Java (SDKMAN is source of truth)
  // --------------------------------------------------------------------------
  "java.configuration.detectJdksAtStart": true,
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.jdt.ls.java.home": "/home/shane/.sdkman/candidates/java/current",
  "java.import.gradle.java.home": "/home/shane/.sdkman/candidates/java/current",
  "java.jdt.ls.vmargs": "-XX:+UseZGC -Xms2g -Xmx8g",

  "java.compile.nullAnalysis.mode": "automatic",
  "java.maxConcurrentBuilds": 12,
  "java.sources.organizeImports.staticStarThreshold": 1,
  "java.autobuild.enabled": true,

  "java.completion.importOrder": ["java", "javax", "org", "com"],
  "java.saveActions.organizeImports": true,

  "java.import.exclusions": [
    "**/node_modules/**",
    "**/.metadata/**",
    "**/archetype-resources/**"
  ],

  // Java debug optimizations (fast stepping, minimal overhead)
  "java.debug.settings.hotCodeReplace": "never",
  "java.debug.settings.showToString": true,
  "java.debug.settings.showLogicalStructure": true,
  "java.debug.settings.maxStringLength": 0,  // No truncation for debugging
  "java.debug.settings.numericPrecision": 0,
  "java.debug.settings.showQualifiedNames": false,
  "java.debug.settings.showHex": false,
  "java.debug.settings.showStaticVariables": true,
  "java.debug.settings.stepping.skipSynthetics": true,
  "java.debug.settings.stepping.skipStaticInitializers": true,
  "java.debug.settings.stepping.skipConstructors": false,
  "java.debug.settings.enableRunDebugCodeLens": true,
  "java.debug.settings.forceBuildBeforeLaunch": true,
  "java.debug.settings.onBuildFailureProceed": false,
  "java.debug.settings.console": "integratedTerminal",
  "java.debug.settings.exceptionBreakpoint.skipClasses": [
    "$JDK",
    "java.lang.ClassLoader"
  ],

  // --------------------------------------------------------------------------
  // Debug Configuration (Fast & Reliable, Remote-Ready)
  // --------------------------------------------------------------------------
  // General debug performance
  "debug.inlineValues": "off",
  "debug.autoExpandLazyVariables": "off",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.showInlineBreakpointCandidates": true,
  "debug.toolBarLocation": "docked",
  "debug.console.closeOnEnd": false,
  "debug.console.historySuggestions": true,
  "debug.console.wordWrap": true,
  "debug.openDebug": "openOnDebugBreak",
  "debug.showSubSessionsInToolBar": true,
  "debug.terminal.clearBeforeReusing": true,
  "debug.focusWindowOnBreak": true,
  "debug.allowBreakpointsEverywhere": true,

  // Remote debugging timeouts (generous for slow networks)
  "debug.javascript.terminalOptions": {
    "timeout": 60000
  },

  // Java debugging (fast stepping, skip framework code)
  "java.debug.settings.stepping.skipClasses": [
    "$JDK",
    "$Libraries",
    "java.*",
    "javax.*",
    "org.springframework.*",
    "org.apache.*",
    "org.slf4j.*",
    "ch.qos.logback.*",
    "reactor.core.*",
    "kotlin.*",
    "com.sun.*",
    "sun.*",
    "jdk.internal.*"
  ],

  // --------------------------------------------------------------------------
  // Python Debug Settings (Remote & Local)
  // --------------------------------------------------------------------------
  "python.debugging.internalConsoleOptions": "openOnSessionStart",
  "python.terminal.activateEnvironment": true,
  "python.terminal.executeInFileDir": true,

  // --------------------------------------------------------------------------
  // Node.js / JavaScript Debug Settings
  // --------------------------------------------------------------------------
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // --------------------------------------------------------------------------
  // Maven / PlantUML follow SDKMAN
  // --------------------------------------------------------------------------
  "maven.terminal.customEnv": [
    {
      "environmentVariable": "JAVA_HOME",
      "value": "/home/shane/.sdkman/candidates/java/current"
    }
  ],

  "plantuml.java": "/home/shane/.sdkman/candidates/java/current/bin/java",

  // --------------------------------------------------------------------------
  // Disable competing language servers
  // --------------------------------------------------------------------------
  "netbeans.javaSupport.enabled": false,
  "kotlin.languageServer.enabled": false,
  "kotlin.debugAdapter.enabled": false,
  "geminicodeassist.displayInlineContextHint": false,
  "docker.extension.enableComposeLanguageServer": false,
  "jdk.telemetry.enabled": false,

  // --------------------------------------------------------------------------
  // Project Manager
  // --------------------------------------------------------------------------
  "projectManager.openInNewWindowWhenClickingInStatusBar": true
}
