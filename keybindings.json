[
    // =========================================================================
    // Git Diff Tasks (Quick Access)
    // =========================================================================
    {
        "key": "cmd+shift+i",
        "command": "workbench.action.tasks.runTask",
        "args": "Git: Diff (ignore whitespace)"
    },
    {
        "key": "cmd+shift+d",
        "command": "workbench.action.tasks.runTask",
        "args": "Git: Diff Working vs HEAD"
    },

    // =========================================================================
    // Diff Navigation (multiple methods for reliability)
    // =========================================================================

    // Method 1: Arrow keys (works in diff editors)
    {
        "key": "alt+down",
        "command": "editor.action.diffReview.next",
        "when": "isInDiffEditor"
    },
    {
        "key": "alt+up",
        "command": "editor.action.diffReview.prev",
        "when": "isInDiffEditor"
    },

    // Method 2: F-keys (works in diff editors)
    {
        "key": "f7",
        "command": "editor.action.diffReview.next",
        "when": "isInDiffEditor"
    },
    {
        "key": "shift+f7",
        "command": "editor.action.diffReview.prev",
        "when": "isInDiffEditor"
    },

    // Method 3: Bracket keys (universal - works everywhere)
    {
        "key": "alt+]",
        "command": "workbench.action.editor.nextChange"
    },
    {
        "key": "alt+[",
        "command": "workbench.action.editor.previousChange"
    },

    // =========================================================================
    // Diff View Toggle (side-by-side vs inline)
    // =========================================================================
    {
        "key": "cmd+shift+t",
        "command": "workbench.action.tasks.runTask",
        "args": "Toggle: Diff Side-by-Side View"
    },

    // =========================================================================
    // Timeline & History Views (track all changes)
    // =========================================================================
    {
        "key": "cmd+shift+h",
        "command": "timeline.focus"
    },
    {
        "key": "ctrl+shift+g",
        "command": "workbench.view.scm"
    },

    // =========================================================================
    // Source Control Quick Actions
    // =========================================================================
    {
        "key": "cmd+shift+g",
        "command": "workbench.view.scm"
    },

    // Open changes in diff view from SCM
    {
        "key": "cmd+k cmd+d",
        "command": "git.openChange"
    },

    // =========================================================================
    // File Comparison
    // =========================================================================
    {
        "key": "cmd+k cmd+c",
        "command": "workbench.files.action.compareWithSaved"
    },

    // =========================================================================
    // Editor Navigation Enhancements
    // =========================================================================
    {
        "key": "cmd+shift+e",
        "command": "workbench.view.explorer"
    },

    // =========================================================================
    // Quick Theme Switching (Age 48+ optimized for long sessions)
    // =========================================================================
    // F9: Warm cream theme (best for extended reading, low eye strain)
    {
        "key": "f9",
        "command": "workbench.action.setEditorLayout",
        "args": {
            "orientation": 0,
            "groups": [{}]
        }
    },
    {
        "key": "f9",
        "command": "workbench.colorTheme",
        "args": "Solarized Light"
    },

    // F10: Cool blue theme (high clarity for debugging)
    {
        "key": "f10",
        "command": "workbench.colorTheme",
        "args": "GitHub Light Default"
    },

    // F11: Soft dark theme (evening sessions, reduced brightness)
    {
        "key": "f11",
        "command": "workbench.colorTheme",
        "args": "GitHub Dark Dimmed"
    },

    // F12: Full dark theme (low-light environments)
    {
        "key": "f12",
        "command": "workbench.colorTheme",
        "args": "GitHub Dark Default"
    },

    // Alternative: Ctrl+K Ctrl+1/2/3/4 for theme switching
    {
        "key": "ctrl+k ctrl+1",
        "command": "workbench.colorTheme",
        "args": "Solarized Light"
    },
    {
        "key": "ctrl+k ctrl+2",
        "command": "workbench.colorTheme",
        "args": "GitHub Light Default"
    },
    {
        "key": "ctrl+k ctrl+3",
        "command": "workbench.colorTheme",
        "args": "GitHub Dark Dimmed"
    },
    {
        "key": "ctrl+k ctrl+4",
        "command": "workbench.colorTheme",
        "args": "GitHub Dark Default"
    }
]
