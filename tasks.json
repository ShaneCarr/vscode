    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "Git: Diff (ignore whitespace)",
            "type": "shell",
            "command": "git diff -w --color-words",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Git: Diff Working vs HEAD",
            "type": "shell",
            "command": "git diff HEAD --color-words",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Git: Diff Staged Changes",
            "type": "shell",
            "command": "git diff --staged --color-words",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Git: File History (Current File)",
            "type": "shell",
            "command": "git log --follow --patch --color -- ${file}",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Git: Recent Changes (Last 10 Commits)",
            "type": "shell",
            "command": "git log -10 --oneline --stat --color",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Git: Show All Modified Files",
            "type": "shell",
            "command": "git status --short",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "Toggle: Diff Side-by-Side View",
            "type": "shell",
            "command": "SETTINGS=\"$HOME/Library/Application Support/Code/User/settings.json\"; CURRENT=$(grep '\"diffEditor.renderSideBySide\"' \"$SETTINGS\" | grep -o 'true\\|false'); if [ \"$CURRENT\" = \"true\" ]; then NEW=\"false\"; MODE=\"INLINE\"; else NEW=\"true\"; MODE=\"SIDE-BY-SIDE\"; fi; sed -i '' \"s/\\\"diffEditor.renderSideBySide\\\": $CURRENT/\\\"diffEditor.renderSideBySide\\\": $NEW/\" \"$SETTINGS\"; echo \"✅ Diff view mode changed to: $MODE\"; echo \"\"; echo \"Current setting: diffEditor.renderSideBySide = $NEW\"; echo \"\"; echo \"ℹ️  Close and reopen any diff views to see the change.\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        },
        {
            "label": "View: Current Diff Mode",
            "type": "shell",
            "command": "SETTINGS=\"$HOME/Library/Application Support/Code/User/settings.json\"; CURRENT=$(grep '\"diffEditor.renderSideBySide\"' \"$SETTINGS\" | grep -o 'true\\|false'); if [ \"$CURRENT\" = \"true\" ]; then echo \"Current mode: SIDE-BY-SIDE\"; else echo \"Current mode: INLINE\"; fi; echo \"\"; echo \"Setting: diffEditor.renderSideBySide = $CURRENT\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true
            }
        }
    ]
}