[core]
	editor = code --wait

[diff]
	tool = vscode

[difftool]
	prompt = false

[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[merge]
	tool = vscode
	conflictstyle = diff3

[mergetool]
	prompt = false
	keepBackup = false

[mergetool "vscode"]
	cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED

[alias]
	# Quick diff and merge aliases
	dt = difftool
	mt = mergetool
	# Show diff in VS Code
	vdiff = difftool --dir-diff
	# Interactive merge with VS Code
	vmerge = mergetool --tool=vscode
	# PR diff aliases - compare branch against base
	prdiff = difftool origin/master...HEAD
	maindiff = difftool origin/main...HEAD
